<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="700dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:textAlignment="center"
    android:id="@+id/view">


    <!--<LinearLayout-->
        <!--android:id="@+id/container"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnected"
        android:id="@+id/textStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="55"
        android:indeterminate="false"
        android:layout_below="@+id/restart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:longClickable="false"
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textDebug"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart connection"
        android:id="@+id/restart"
        android:layout_below="@+id/textStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/trView"
        android:layout_toEndOf="@+id/trView"
        android:textSize="12dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TS - "
        android:id="@+id/tsTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignBottom="@+id/restart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:id="@+id/tsView"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/tsTitle"
        android:layout_toRightOf="@+id/tsTitle"
        android:layout_toEndOf="@+id/tsTitle"
        android:paddingBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:id="@+id/tlView"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/tlTitle"
        android:layout_toRightOf="@+id/tlTitle"
        android:layout_toEndOf="@+id/tlTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TL - "
        android:id="@+id/tlTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/restart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TR - "
        android:id="@+id/trTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/tlView"
        android:layout_toRightOf="@+id/tsView"
        android:layout_toEndOf="@+id/tsView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:id="@+id/trView"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/trTitle"
        android:layout_toRightOf="@+id/trTitle"
        android:layout_toEndOf="@+id/trTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA - "
        android:id="@+id/taTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/trView"
        android:layout_toLeftOf="@+id/taView"
        android:layout_toStartOf="@+id/taView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:id="@+id/taView"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/taTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refreh"
        android:id="@+id/buttonRefreh"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/ddd"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/ddd"
        android:textAlignment="center"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webview"
        android:layout_below="@+id/buttonRefreh"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reload"
        android:id="@+id/reload"
        android:layout_alignBottom="@+id/buttonRefreh"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <!--</LinearLayout>-->


</RelativeLayout>
</ScrollView>
